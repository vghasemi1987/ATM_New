@model Web.Core.UserManagement.ViewModels.SigninViewModel

@{
	ViewBag.Title = "ورود به پنل مدیریتی";
	Layout = "~/Core/Shared/_LoginLayout.cshtml";
}

<div class="m-login__signin">
	<div class="m-login__head">
		<h3 class="m-login__title">پرتال اداره حسابهای متمرکز</h3>
	</div>
	<form asp-controller="UserManagement" asp-action="Signin" asp-route-returnurl="@ViewData["ReturnUrl"]" class="m-login__form m-form" method="post">
		<div class="form-group m-form__group">
			<input asp-for="UserName" class="form-control m-input" autocomplete="off" style="font-family:Verdana !important;"/>
		</div>
		<div class="form-group m-form__group">
			<input asp-for="Password" class="form-control m-input m-login__form-input--last" autocomplete="off"  />
		</div>
		<div class="row m-login__form-sub">
			<div class="col m--align-left m-login__form-left">
				<label class="m-checkbox  m-checkbox--light">
					<input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
					<span></span>
				</label>
			</div>
			<div class="col m--align-right m-login__form-right">
				<a href="javascript:;" id="m_login_forget_password" class="m-link">کلمه عبور خود را فراموش کرده اید؟</a>
			</div>
		</div>
		<div class="m-login__form-action">
			<button id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primary">ورود</button>
		</div>
	</form>
</div>
<partial name="/Core/UserManagement/Views/_ForgotPassword.cshtml" />