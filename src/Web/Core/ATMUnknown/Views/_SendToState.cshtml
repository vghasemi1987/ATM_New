@model Web.Core.ATMUnknown.ViewModels.ToNextStepViewModel

<form asp-controller="ATMUnknown" asp-action="SubmitToState" id="frmSubmitToState" method="post">
    <div class="modal-body">
        @for (int i = 0; i < Model.Ids.Count; i++)
        {
            <input type="hidden" asp-for="Ids[i]" />
        }
        <div class="form-group">
            <label asp-for="MessageText" class="control-label"></label>
            <textarea asp-for="MessageText" class="form-control"></textarea>
            <span asp-validation-for="MessageText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerOrBreanchId" class="control-label">نوع ارجاع</label>
            <select asp-for="CustomerOrBreanchId" class="form-control">
                <option value="1300">سهم شعبه</option>
                <option value="1301">سهم مشتری</option>
            </select>
            <span asp-validation-for="CustomerOrBreanchId" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Status" />

    </div>
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal">خروج</button>
        <button onclick="event.preventDefault(); saveAndupdate($(this.form), '@Url.Action("SubmitToState", "ATMUnknown")');"
                class="btn btn-primary" perform="action">
            ذخیره
        </button>
    </div>
</form>